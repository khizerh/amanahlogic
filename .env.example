# Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Database
DATABASE_URL="postgresql://localhost:5432/imarah"

# Stripe - IMARAH PLATFORM KEYS (for charging organizations for platform subscriptions)
# NOTE: These are NOT the same as the organization's Stripe keys!
# Organization Stripe keys (for student tuition) are configured in Settings > Stripe Integration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PLATFORM_WEBHOOK_SECRET=whsec_...  # Webhook for platform subscriptions (POST /api/webhooks/stripe-platform)

# Auth (Clerk or NextAuth)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Email (Resend)
RESEND_API_KEY=
RESEND_FROM_ADDRESS=no-reply@imarah.io

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Cron Jobs
CRON_SECRET=

# Encryption (for encrypting organization Stripe keys in database)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Feature Flags
# Enable community management features (flyer approvals, fundraising requests, jamaat requests)
# Default: false (disabled for beta launch)
# NEXT_PUBLIC_ENABLE_COMMUNITY=true
